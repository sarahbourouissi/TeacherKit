<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">






    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <net.steamcrafted.materialiconlib.MaterialIconView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:materialIcon="account"
                app:materialIconColor="@color/colorPrimary"
                app:materialIconSize="30dp"
                android:layout_gravity="center"

                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"

                android:id="@+id/iconNom"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/labelEtudiant"


                android:layout_toRightOf="@+id/iconNom"
                android:text="@string/nom"


                android:layout_marginTop="20pt"
                android:layout_marginRight="20dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/nomEtudiant"
                android:text="Text 2"

                android:layout_marginTop="20pt"
                android:layout_toEndOf="@+id/labelEtudiant"
                android:layout_toRightOf="@+id/labelEtudiant" />
        </RelativeLayout>






    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <net.steamcrafted.materialiconlib.MaterialIconView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:materialIcon="account"
                app:materialIconColor="@color/colorPrimary"
                app:materialIconSize="30dp"
                android:layout_gravity="center"

                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"

                android:id="@+id/iconPrenom"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/labelprenom"
                android:text="Prénom :"
                android:layout_toRightOf="@+id/iconPrenom"
                android:layout_marginEnd="@dimen/carddetail"
                android:layout_marginRight="@dimen/carddetail"
                android:layout_marginLeft="50pt"
                android:layout_marginTop="20pt"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/prenomEtudiant"
            android:text="Text 1"
            android:layout_marginTop="20pt"
            android:layout_toEndOf="@+id/labelprenom"
            android:layout_toRightOf="@+id/labelprenom"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <net.steamcrafted.materialiconlib.MaterialIconView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:materialIcon="contact_mail"
                app:materialIconColor="@color/colorPrimary"
                app:materialIconSize="30dp"
                android:layout_gravity="center"

                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"


                android:id="@+id/iconMail"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/labelMail"
            android:layout_marginTop="20pt"
            android:text="Mail"
            android:layout_toRightOf="@+id/iconMail"
            android:layout_marginEnd="@dimen/carddetail"
            android:layout_marginRight="@dimen/carddetail"
            android:layout_marginLeft="50pt"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/mailEtudiant"
            android:text="Text 1"
            android:layout_marginTop="20pt"
            android:layout_toEndOf="@+id/labelMail"
            android:layout_toRightOf="@+id/labelMail"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <net.steamcrafted.materialiconlib.MaterialIconView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:materialIcon="phone"
                app:materialIconColor="@color/colorPrimary"
                app:materialIconSize="30dp"
                android:layout_gravity="center"

                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"

                android:id="@+id/icontel"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/labelnum"
            android:layout_marginTop="20pt"
            android:layout_toRightOf="@+id/icontel"
            android:text="Télephone :"
            android:layout_marginEnd="@dimen/carddetail"
            android:layout_marginRight="@dimen/carddetail"
            android:layout_marginLeft="50pt"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/numtelEtudiant"
            android:text="Text 1"
            android:layout_marginTop="20pt"
            android:layout_toEndOf="@+id/labelnum"
            android:layout_toRightOf="@+id/labelnum"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>