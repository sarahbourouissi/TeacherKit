<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordera"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text=" A "  />

            <TextView
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/borderp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text=" P " />
            <TextView
                android:id="@+id/retard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/borderr"
                android:textStyle="bold"
                android:text=" R "
                android:textSize="20sp" />
        </RelativeLayout>
        <com.pkmmte.view.CircularImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgetudiant"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            app:border="true"

            app:border_width="2dp"
            app:shadow="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/etudiant_nom_seance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Haithem"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/etudiant_prenom_seance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sarah"
            android:lines="1"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/overflowS"
            android:layout_width="@dimen/ic_album_overflow_width"
            android:layout_height="@dimen/ic_album_overflow_height"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots" />


    </LinearLayout>

</android.support.v7.widget.CardView>